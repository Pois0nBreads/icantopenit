<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <Switch
        android:id="@+id/setting_switch1"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用密码" />

    <Switch
        android:id="@+id/setting_switch2"
        android:layout_margin="15dp"
        android:layout_below="@id/setting_switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用指纹" />

    <View
        android:id="@+id/setting_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/setting_switch2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/cardview_shadow_start_color"/>

    <Switch
        android:id="@+id/setting_switch3"
        android:layout_margin="15dp"
        android:layout_below="@id/setting_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐藏App图标" />

</RelativeLayout>